<div class="dashboard">
  <h2>Edit Profile</h2>

  <%= form_with model: @user, url: user_path, class: "drive-form" do |f| %>
    <%= render "shared/error_messages", object: @user, object_name: "profile" %>

    <div class="field">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, required: true %>
    </div>

    <div class="field">
      <%= f.label :email_address, "Email" %>
      <%= f.email_field :email_address, required: true %>
    </div>

    <div class="field">
      <%= f.label :password, "New Password (leave blank to keep current)" %>
      <%= f.password_field :password %>
      <small>Leave blank if you don't want to change it</small>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm New Password" %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="actions">
      <%= f.submit "Update Profile", class: "button-primary" %>
      <%= link_to "Cancel", root_path, class: "button" %>
    </div>
  <% end %>
</div>
