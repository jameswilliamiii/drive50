<tbody id="recent-drives-table">
  <% if recent_sessions.any? %>
    <%= render partial: "drive_sessions/session_row", collection: recent_sessions, as: :session %>
  <% else %>
    <tr>
      <td colspan="4" class="empty-state">
        <p>No drives recorded yet. Start your first drive!</p>
      </td>
    </tr>
  <% end %>
</tbody>

