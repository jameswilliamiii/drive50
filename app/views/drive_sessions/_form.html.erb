<%= form_with model: drive_session, class: "drive-form" do |f| %>
  <% if drive_session.errors.any? %>
    <div class="error-messages">
      <h3><%= pluralize(drive_session.errors.count, "error") %> prevented this drive from being saved:</h3>
      <ul>
        <% drive_session.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-section">
    <div class="form-section-header">
      <h3 class="form-section-title">Time</h3>
    </div>
    <div class="form-section-content">
      <div class="field-group">
        <div class="field">
          <%= f.label :started_at, "Start Time" %>
          <% if drive_session.started_at.present? %>
            <%= f.datetime_local_field :started_at,
                                        value: drive_session.started_at&.in_time_zone(Time.zone).strftime("%Y-%m-%dT%H:%M"),
                                        required: true,
                                        class: "form-input" %>
          <% else %>
            <%= f.datetime_local_field :started_at, required: true, class: "form-input" %>
          <% end %>
        </div>

        <% if drive_session.persisted? %>
          <div class="field">
            <%= f.label :ended_at, "End Time" %>
            <span class="field-optional">(optional)</span>
            <% if drive_session.ended_at.present? %>
              <%= f.datetime_local_field :ended_at,
                                          value: drive_session.ended_at&.in_time_zone(Time.zone).strftime("%Y-%m-%dT%H:%M"),
                                          class: "form-input" %>
            <% else %>
              <%= f.datetime_local_field :ended_at, class: "form-input" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="form-section">
    <div class="form-section-header">
      <h3 class="form-section-title">Notes</h3>
      <span class="field-optional">(optional)</span>
    </div>
    <div class="form-section-content">
      <div class="field">
        <%= f.label :notes, "Add notes about this drive", class: "sr-only" %>
        <%= f.text_area :notes, rows: 4,
                        placeholder: "Road types, conditions, skills practiced...",
                        class: "form-input form-textarea" %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit class: "button-primary button-large" %>
    <%= link_to "Cancel", drive_sessions_path, class: "button button-large" %>
  </div>
<% end %>

