<tr id="<%= dom_id(session) %>" class="drive-session-row" data-controller="drive-session">
  <td><%= local_time(session.started_at, format: "%B %d, %Y") %></td>
  <td class="night-indicator time-of-day-cell">
    <%= render "drive_sessions/night_day_indicator", is_night: session.is_night_drive, size: 20 %>
  </td>
  <td class="duration-cell"><%= session.duration_hours %> hrs</td>
  <td class="notes-cell">
    <% if session.notes.present? %>
      <span class="tooltip-trigger"
            data-tooltip="<%= session.notes %>"
            data-controller="notes-tooltip"
            data-notes-tooltip-target="trigger">
        <span class="notes-text" data-notes-tooltip-target="text"><%= session.notes %></span>
      </span>
    <% else %>
      <span class="notes-empty">â€”</span>
    <% end %>
  </td>
  <td class="actions">
    <%= link_to "Edit", edit_drive_session_path(session), class: "action-link" %>
    <%= button_to "Delete", drive_session_path(session),
                  method: :delete,
                  data: { turbo_confirm: "Are you sure?" },
                  class: "action-link-danger",
                  form: {
                    style: "display: inline;",
                    data: { action: "submit->drive-session#handleDelete" }
                  } %>
  </td>
</tr>
