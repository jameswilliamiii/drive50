<!-- Bottom Navigation Bar -->
<nav class="bottom-nav">
  <%= link_to root_path, class: "bottom-nav-item #{'active' if request.path == root_path}" do %>
    <%= bottom_nav_icon(:home, active: request.path == root_path, size: 24, class: "bottom-nav-icon") %>
    <span class="bottom-nav-label">Home</span>
  <% end %>

  <%= link_to all_drive_sessions_path, class: "bottom-nav-item #{'active' if request.path == all_drive_sessions_path}" do %>
    <%= bottom_nav_icon(:list, active: request.path == all_drive_sessions_path, size: 24, class: "bottom-nav-icon") %>
    <span class="bottom-nav-label">Log</span>
  <% end %>

  <%= link_to export_drive_sessions_path(format: :csv), class: "bottom-nav-item #{'active' if request.path == export_drive_sessions_path(format: :csv)}" do %>
    <%= bottom_nav_icon(:export, active: request.path == export_drive_sessions_path(format: :csv), size: 24, class: "bottom-nav-icon") %>
    <span class="bottom-nav-label">Export</span>
  <% end %>

  <!-- Floating New/Complete Drive button (mobile only, state managed via turbo streams) -->
  <div id="fab-new-drive-wrapper">
    <%= render "shared/fab_new_drive" %>
  </div>

  <%= link_to edit_user_path, class: "bottom-nav-item #{'active' if request.path == edit_user_path}" do %>
    <%= bottom_nav_icon(:settings, active: request.path == edit_user_path, size: 24, class: "bottom-nav-icon") %>
    <span class="bottom-nav-label">Settings</span>
  <% end %>
</nav>

