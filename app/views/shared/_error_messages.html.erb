<% if object.errors.any? %>
  <div class="error-messages">
    <h3><%= pluralize(object.errors.count, "error") %> prevented this <%= object_name || object.model_name.human.downcase %> from being saved:</h3>
    <ul>
      <% object.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
